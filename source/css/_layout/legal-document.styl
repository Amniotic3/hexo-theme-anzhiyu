// 法律文档专用样式
body.pace-done {
  .legal-document {
    font-family: "仿宋_GB2312", "FangSong", "仿宋", "NSimSun", serif !important;
    font-size: 24px !important;
    line-height: 1.8 !important;
    text-align: justify !important;
    max-width: 740px !important; // 调整为740px，确保28个字
    margin: 0 auto !important;
    padding: 40px 20px !important;

    // 文档主标题
    h1 {
      font-family: "方正小标宋简体", "SimHei", "黑体", "Microsoft YaHei", sans-serif !important;
      font-size: 33px !important;
      text-align: center !important;
      font-weight: bold !important;
      line-height: 1.5 !important;
      margin: 0 0 42px 0 !important;
      border: none !important;
      padding: 0 !important;
    }

    // 目录标题/章节标题
    h2 {
      font-family: "黑体", "楷体_GB2312", "KaiTi", "STKaiti", serif !important;
      font-size: 24px !important;
      text-align: center !important;
      font-weight: normal !important;
      line-height: 1.5 !important;
      margin: 30px 0 !important;
      border: none !important;
      padding: 0 !important;
    }

    // 正文内容
    p {
      font-family: "仿宋_GB2312", "FangSong", "仿宋", "NSimSun", serif !important;
      font-size: 24px !important;
      text-align: justify !important;
      text-indent: 2em !important;
      line-height: 1.8 !important;
      margin: 18px 0 !important;
      word-spacing: 0.1em !important;
      letter-spacing: 0.02em !important;
    }

    // 条款编号
    strong {
      font-family: "SimHei", "黑体", "Microsoft YaHei", sans-serif !important;
      font-size: 24px !important;
      font-weight: bold !important;
    }

    // 列表
    ul, ol {
      font-family: "仿宋_GB2312", "FangSong", "仿宋", "NSimSun", serif !important;
      font-size: 24px !important;
      padding-left: 3em !important;
      line-height: 1.8 !important;
      margin: 18px 0 !important;

      li {
        margin: 12px 0 !important;
        text-align: justify !important;
      }
    }

    // 特殊处理：条款编号和正文的组合
    p:has(strong) {
      text-indent: 2em !important;

      strong {
        display: inline !important;
      }
    }

    // 隐藏不需要的元素
    .headerlink,
    .post-meta,
    .post-copyright,
    .tag_share,
    .post-footer,
    .relatedPosts,
    #post-comment,
    .post-reward,
    .post-copyright-info {
      display: none !important;
    }

    // 确保文章容器宽度合适
    #article-container {
      max-width: 740px !important;
      margin: 0 auto !important;
      padding: 0 !important;
    }
  }
}
